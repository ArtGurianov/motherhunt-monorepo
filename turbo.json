{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [".env*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "DATABASE_URL",
        "NEXT_PUBLIC_APP_LOCALE",
        "CONTENTFUL_SPACE_ID",
        "CONTENTFUL_ACCESS_TOKEN"
      ]
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "inputs": ["$TURBO_DEFAULT$"],
      "env": ["DATABASE_URL"],
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:seed": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "format": {
      "cache": false
    },
    "format:fix": {
      "cache": false
    }
  }
}
